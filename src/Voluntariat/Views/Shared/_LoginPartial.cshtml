@using Microsoft.AspNetCore.Identity
@using Voluntariat.Models
@using Voluntariat.Areas.Identity.Pages.Account
@using Voluntariat.Controllers

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link nav-item-color-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link nav-item-color-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item nav-item-margin">
            <a class="nav-link nav-item-color-white" asp-area="" asp-controller="@nameof(NGOsController)[0..^10]" asp-action="@nameof(NGOsController.Index)">NGO<span class="text-lowercase">s</span></a>
        </li>
        <li class="nav-item nav-item-margin">
            <a class="nav-link nav-item-color-white" href="">Volunteers</a>
        </li>
        <li class="nav-item nav-item-margin">
            <a class="nav-link nav-item-color-white" href="">why us?</a>
        </li>
        <li class="nav-item nav-item-margin">
            <a class="nav-link nav-item-color-yellow" asp-area="Identity" asp-page="/Account/Register" asp-route-registerAs="@nameof(RegisterAs.NGO)">Submit NGO</a>
        </li>
        <li class="nav-item nav-item-margin">
            <a class="nav-link nav-item-color-yellow nav-item-border" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        </li>
    }
</ul>
